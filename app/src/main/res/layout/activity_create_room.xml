<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoom">
    <ImageView
        android:id="@+id/logoreg"
        android:src="@drawable/edulogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoreg"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginEnd="20dp"

        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrats"
        android:text="Create Room"
        android:textColor="@color/head"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"

        android:layout_marginTop="10dp"

        android:layout_height="wrap_content"
        android:text="Enter Question to Create Room"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"



        android:gravity="center_horizontal" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RoomName"
android:fontFamily="@font/montserrat"
android:background="@drawable/input"
        android:padding="10dp"
        android:layout_below="@+id/enter"
        android:hint="Enter Room Name"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textColor="@color/head"


        android:inputType="textEmailAddress"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CreateRoomID"
        android:visibility="invisible"
android:background="@drawable/input"
android:fontFamily="@font/montserrat"
        android:textSize="24dp"
        android:layout_below="@+id/RoomName"
        android:hint="Enter RoomID"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:padding="10dp"
        android:textColor="@color/head"

        android:inputType="textEmailAddress"

        />
    <Button
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CreateRoomID"
        android:text="Create"
        android:background="@drawable/btn"
        android:id="@+id/Create"
        android:fontFamily="@font/montserrat"
        android:textAllCaps="false"
        android:padding="14dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textSize="20sp"

        />

</RelativeLayout>